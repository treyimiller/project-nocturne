    }
    
    .corner-ornament {
      width: 6px;
      height: 6px;
    }
    
    .ornament-lines span {
      width: 18px;
    }
    
    .ornament-lines span:nth-child(2) {
      width: 12px;
    }
  }
    
    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .form-group {
      flex-direction: column;
      border-radius: 8px;
    }
    
    .email-input {
      border-radius: 8px 8px 0 0;
      border-right: 2px solid rgba(255, 255, 255, 0.1);
    }
    
    .email-submit {
      border-radius: 0 0 8px 8px;
    }
  }
  
  @media (max-width: 480px) {
    .hero-section {
      min-height: 70vh;
      padding: 2rem 0;
    }
    
    .hero-collection-name {
      top: 1.5rem;
      font-size: 0.75rem;
      letter-spacing: 0.2em;
    }
    
    .hero-cta-container {
      bottom: 1.5rem;
    }
    
    .hero-cta-button {
      padding: 1rem 2rem;
      font-size: 0.9rem;
      gap: 0.5rem;
      border-width: 2px;
      letter-spacing: 0.15em;
    }
    
    
    .featured-products {
      padding: 4rem 1rem;
    }
    
    .email-capture {
      padding: 4rem 1rem;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
    }
  }
