<!-- Hero Section -->
<section class="hero-section">
  {% if section.settings.hero_background_image %}
    <!-- Hero Background Image -->
    <div class="hero-background">
      <img 
        src="{{ section.settings.hero_background_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.hero_background_image.alt | default: 'Hero Background' }}"
        class="hero-bg-image"
        loading="eager"
      >
    </div>
  {% endif %}
  
  <!-- Background Elements -->
  <div class="hero-texture">
    <div class="hero-noise"></div>
    <div class="hero-gradient"></div>
  </div>
  
  <!-- Bottom Blend Overlay -->
  <div class="hero-blend-overlay"></div>
  
  <!-- Floating Particles -->
  <div class="hero-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>
  
  <!-- Hero Collection Name -->
  <div class="hero-collection-name">
    {% if section.settings.collection_name %}
      {{ section.settings.collection_name }}
    {% else %}
      Saints & Sinners
    {% endif %}
  </div>
  
  <!-- Hero CTA -->
  <div class="hero-cta-container">
    {% if section.settings.primary_cta_text %}
      <a href="{{ section.settings.primary_cta_url | default: '/collections/all' }}" class="hero-cta-button">
        {{ section.settings.primary_cta_text }}
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    {% endif %}
  </div>
</section>


<!-- Featured Products Section -->
<section class="featured-products">
  <div class="section-header">
    <h2 class="section-title">
      {% if section.settings.featured_title %}
        {{ section.settings.featured_title }}
      {% else %}
        Featured Collection
      {% endif %}
    </h2>
    {% if section.settings.featured_description %}
      <p class="section-description">{{ section.settings.featured_description }}</p>
    {% endif %}
  </div>
  
  <div class="products-grid">
    {% assign featured_collection = collections[section.settings.featured_collection] | default: collections.all %}
    {% for product in featured_collection.products limit: section.settings.products_count %}
      <div class="product-card">
        <div class="product-image">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 400 }}" 
              alt="{{ product.featured_image.alt | default: product.title }}"
              width="400"
              height="400"
              loading="lazy"
            >
          {% endif %}
          
          {% if product.compare_at_price > product.price %}
            <div class="product-badge">Sale</div>
          {% endif %}
        </div>
        
        <div class="product-info">
          <h3 class="product-title">{{ product.title }}</h3>
          <div class="product-price">
            <span class="current-price">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="original-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
          
          <a href="{{ product.url }}" class="product-cta">
            View Details
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
  
  {% if section.settings.view_all_url %}
    <div class="section-cta">
      <a href="{{ section.settings.view_all_url }}" class="cta-outline">
        View All Products
      </a>
    </div>
  {% endif %}
</section>

<!-- Email Capture Section -->
<section class="email-capture">
  <div class="email-capture-content">
    <div class="email-text">
      <h2 class="email-title">
        {% if section.settings.email_title %}
          {{ section.settings.email_title }}
        {% else %}
          Join the Inner Circle
        {% endif %}
      </h2>
      {% if section.settings.email_description %}
        <p class="email-description">{{ section.settings.email_description }}</p>
      {% endif %}
    </div>
    
    <div class="email-form">
      <form action="{{ routes.account_url }}" method="post" class="newsletter-form">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        
        <div class="form-group">
          <input 
            type="email" 
            name="customer[email]" 
            placeholder="Enter your email address"
            class="email-input"
            required
          >
          <button type="submit" class="email-submit">
            Subscribe
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
        
        <p class="email-disclaimer">
          {% if section.settings.email_disclaimer %}
            {{ section.settings.email_disclaimer }}
          {% else %}
            Be the first to know about new releases and exclusive offers.
          {% endif %}
        </p>
      </form>
    </div>
  </div>
</section>

{% stylesheet %}
  /* Hero Section */
  .hero-section {
    position: relative;
    width: 100vw;
    left: 50%;
    transform: translateX(-50%);
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    overflow: hidden;
  }
  
  /* Hero Background Image */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.9;
    mix-blend-mode: multiply;
    filter: brightness(0.8) contrast(1.2);
  }
  
  .hero-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .hero-noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.04) 0.5px, transparent 0.5px),
      radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.03) 0.5px, transparent 0.5px),
      radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 25px 25px, 35px 35px, 50px 50px;
    animation: heroTextureShift 60s linear infinite;
    opacity: 0.6;
  }
  
  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, 
      rgba(255, 255, 255, 0.03) 0%, 
      rgba(255, 255, 255, 0.01) 40%, 
      transparent 70%);
    z-index: 2;
  }
  
  /* Bottom Blend Overlay */
  .hero-blend-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 20%;
    background: linear-gradient(180deg, 
      transparent 0%, 
      rgba(14, 14, 16, 0.3) 30%,
      rgba(14, 14, 16, 0.7) 70%,
      rgba(14, 14, 16, 1) 100%);
    z-index: 2;
    pointer-events: none;
  }
  
  .hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }
  
  .hero-particles .particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    box-shadow: 0 0 6px rgba(255, 255, 255, 0.5);
  }
  
  .hero-particles .particle:nth-child(1) {
    top: 20%;
    left: 10%;
    animation: heroFloat 12s ease-in-out infinite;
  }
  
  .hero-particles .particle:nth-child(2) {
    top: 60%;
    left: 80%;
    animation: heroFloat 15s ease-in-out infinite 2s;
  }
  
  .hero-particles .particle:nth-child(3) {
    top: 80%;
    left: 20%;
    animation: heroFloat 18s ease-in-out infinite 4s;
  }
  
  .hero-particles .particle:nth-child(4) {
    top: 30%;
    left: 70%;
    animation: heroFloat 14s ease-in-out infinite 1s;
  }
  
  .hero-particles .particle:nth-child(5) {
    top: 70%;
    left: 50%;
    animation: heroFloat 16s ease-in-out infinite 3s;
  }
  
  /* Hero Collection Name */
  .hero-collection-name {
    position: absolute;
    top: 3rem;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    z-index: 4;
    white-space: nowrap;
  }
  
  /* Hero CTA */
  .hero-cta-container {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
  }
  
  .hero-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 3rem;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.4s ease;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.1);
  }
  
  .hero-cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
    background-color: rgba(255, 255, 255, 0.95);
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .hero-cta-button svg {
    transition: transform 0.3s ease;
  }
  
  .hero-cta-button:hover svg {
    transform: translateX(3px);
  }
  
  
  
  /* Featured Products */
  .featured-products {
    padding: 5rem 2rem;
    background-color: var(--color-background);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }
  
  .section-description {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .products-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .product-card {
    background-color: var(--color-background-ui);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }
  
  .product-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }
  
  .product-info {
    padding: 1.5rem;
  }
  
  .product-title {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-foreground);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  
  .product-price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .current-price {
    font-family: 'Oswald', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-foreground);
  }
  
  .original-price {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-foreground);
    opacity: 0.5;
    text-decoration: line-through;
  }
  
  .product-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Oswald', sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    transition: all 0.3s ease;
    opacity: 0.8;
  }
  
  .product-cta:hover {
    opacity: 1;
    transform: translateX(5px);
  }
  
  .section-cta {
    text-align: center;
  }
  
  .cta-outline {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background-color: transparent;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .cta-outline:hover {
    border-color: rgba(255, 255, 255, 0.6);
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  /* Email Capture */
  .email-capture {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.02) 0%, 
      rgba(255, 255, 255, 0.05) 100%);
  }
  
  .email-capture-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .email-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }
  
  .email-description {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  .newsletter-form {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .form-group {
    display: flex;
    gap: 0;
    margin-bottom: 1rem;
    border-radius: 50px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .email-input {
    flex: 1;
    padding: 1rem 1.5rem;
    background-color: var(--color-background-ui);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-right: none;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    outline: none;
    border-radius: 50px 0 0 50px;
  }
  
  .email-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .email-input:focus {
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .email-submit {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    border-radius: 0 50px 50px 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .email-submit:hover {
    background-color: rgba(255, 255, 255, 0.9);
  }
  
  .email-disclaimer {
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.5;
    line-height: 1.4;
  }
  
  /* Animations */
  @keyframes heroTextureShift {
    0% {
      background-position: 0px 0px, 0px 0px, 0px 0px;
    }
    100% {
      background-position: 25px 25px, -35px 35px, 50px -50px;
    }
  }
  
  @keyframes heroFloat {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-10px) translateX(5px);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) translateX(-5px);
      opacity: 0.5;
    }
    75% {
      transform: translateY(-10px) translateX(8px);
      opacity: 0.6;
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-collection-name {
      top: 2rem;
      font-size: 0.8rem;
      letter-spacing: 0.25em;
    }
    
    .hero-cta-container {
      bottom: 2rem;
    }
    
    .hero-cta-button {
      padding: 1rem 2rem;
      font-size: 0.9rem;
    }
  }
    
    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .form-group {
      flex-direction: column;
      border-radius: 8px;
    }
    
    .email-input {
      border-radius: 8px 8px 0 0;
      border-right: 2px solid rgba(255, 255, 255, 0.1);
    }
    
    .email-submit {
      border-radius: 0 0 8px 8px;
    }
  }
  
  @media (max-width: 480px) {
    .hero-section {
      min-height: 70vh;
      padding: 2rem 0;
    }
    
    .hero-collection-name {
      top: 1.5rem;
      font-size: 0.75rem;
      letter-spacing: 0.2em;
    }
    
    .hero-cta-container {
      bottom: 1.5rem;
    }
    
    .hero-cta-button {
      padding: 0.9rem 1.8rem;
      font-size: 0.85rem;
      gap: 0.5rem;
    }
    
    
    .featured-products {
      padding: 4rem 1rem;
    }
    
    .email-capture {
      padding: 4rem 1rem;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

