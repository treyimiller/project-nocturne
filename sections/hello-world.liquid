    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    position: relative;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(215, 38, 56, 0.35) 50%,
      transparent 100%);
