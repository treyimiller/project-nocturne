<style>
  /* Clean layout structure */
  .timer-section {
    background: linear-gradient(to bottom, transparent, #000000);
    padding: 2rem 0;
    min-height: 25vh;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }
  
  .countdown-timer {
    display: flex;
    gap: 2rem;
    color: rgba(215, 38, 56, 1);
  }
  
  .timer-unit {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .timer-number {
    font-size: 3rem;
    font-weight: bold;
    line-height: 1;
    margin-bottom: 0.5rem;
  }
  
  .timer-label {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
  }
  
  .hero-section {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    background: #000000;
    overflow: hidden;
    position: relative;
  }
  
  .hero-background {
    width: 100%;
    margin-top: -17%;
    margin-bottom: -17%;
  }
  
  .hero-bg-image {
    width: 100%;
    height: auto;
    display: block;
    transform: scale(2);
    transform-origin: center center;
  }
  
  .featured-products {
    position: relative;
    z-index: 1;
    margin-top: 3rem;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .timer-section {
      padding: 1.5rem 0;
      margin-top: 4rem;
      min-height: 20vh;
    }
    
    .countdown-timer {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .timer-number {
      font-size: 2rem;
      margin-bottom: 0.25rem;
    }
    
    .timer-label {
      font-size: 0.75rem;
    }
    
    .hero-section {
      margin-top: -2rem;
      height: 60vh;
    }
    
    .hero-background {
      margin-top: 0;
      margin-bottom: 0;
      height: 100%;
    }
    
    .hero-bg-image {
      transform: scale(1.2);
      transform-origin: top center;
      height: 100%;
      object-fit: cover;
    }
    
    .featured-products {
      margin-top: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .timer-section {
      padding: 1rem 0;
      margin-top: 5rem;
      min-height: 15vh;
    }
    
    .countdown-timer {
      gap: 0.75rem;
    }
    
    .timer-number {
      font-size: 1.5rem;
    }
    
    .timer-label {
      font-size: 0.7rem;
    }
    
    .hero-section {
      margin-top: -3rem;
      height: 65vh;
    }
  }
</style>

<!-- Timer Section -->
<section class="timer-section">
  <div id="countdown-timer" class="countdown-timer" data-launch-date="{{ section.settings.launch_date | default: '2025-07-25' }}">
    <div class="timer-unit">
      <span class="timer-number" id="days">00</span>
      <span class="timer-label">Days</span>
    </div>
    <div class="timer-unit">
      <span class="timer-number" id="hours">00</span>
      <span class="timer-label">Hours</span>
    </div>
    <div class="timer-unit">
      <span class="timer-number" id="minutes">00</span>
      <span class="timer-label">Minutes</span>
    </div>
    <div class="timer-unit">
      <span class="timer-number" id="seconds">00</span>
      <span class="timer-label">Seconds</span>
    </div>
  </div>
</section>

<!-- Hero Section -->
<section class="hero-section">
  {% if section.settings.hero_background_image %}
    <div class="hero-background">
      <img 
        src="{{ section.settings.hero_background_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.hero_background_image.alt | default: 'Hero Background' }}"
        class="hero-bg-image"
        loading="eager"
      >
    </div>
  {% endif %}
</section>

<!-- Featured Products Section -->
<section class="featured-products">
  <!-- Gothic Frame Top -->
  <div class="gothic-frame gothic-frame-top">
    <div class="frame-corner frame-corner-left">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
    <div class="frame-border frame-border-top">
      <div class="border-center-ornament">
        <div class="ornament-diamond"></div>
        <div class="ornament-lines">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <div class="frame-corner frame-corner-right">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
  </div>
  <div class="section-header">
    <h2 class="section-title">
      {% if section.settings.featured_title %}
        {{ section.settings.featured_title }}
      {% else %}
        Featured Collection
      {% endif %}
    </h2>
    {% if section.settings.featured_description %}
      <p class="section-description">{{ section.settings.featured_description }}</p>
    {% endif %}
  </div>
  
  <!-- Desktop Grid View -->
  <div class="products-grid desktop-only">
    {% assign featured_collection = collections[section.settings.featured_collection] | default: collections.all %}
    {% for product in featured_collection.products limit: section.settings.products_count %}
      {%- comment %}<locksmith:ac03>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: featured_collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:ac03>{% endcomment -%}
      <a href="{{ product.url }}" class="product-card">
        <div class="product-image">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 400 }}" 
              alt="{{ product.featured_image.alt | default: product.title }}"
              width="400"
              height="400"
              loading="lazy"
            >
          {% else %}
            <div class="product-image-placeholder">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
            </div>
          {% endif %}
          
          {% if product.compare_at_price > product.price %}
            <div class="product-badge">Sale</div>
          {% endif %}
        </div>
        
        <div class="product-info">
          <h3 class="product-title">{{ product.title }}</h3>
          <div class="product-price">
            <span class="current-price">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="original-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
          
          <div class="product-cta">
            <span class="cta-text">View</span>
            <span class="cta-underline"></span>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
  
  <!-- Mobile Swiper View -->
  <div class="featured-products-swiper mobile-only">
    <div class="featured-swiper-container">
      <div class="featured-swiper-wrapper">
        {% assign featured_collection = collections[section.settings.featured_collection] | default: collections.all %}
        {% for product in featured_collection.products limit: section.settings.products_count %}
          {%- comment %}<locksmith:ac04>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: featured_collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:ac04>{% endcomment -%}
          <div class="featured-swiper-slide">
            <a href="{{ product.url }}" class="product-card">
              <div class="product-image">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 300 }}" 
                    alt="{{ product.featured_image.alt | default: product.title }}"
                    width="300"
                    height="300"
                    loading="lazy"
                  >
                {% else %}
                  <div class="product-image-placeholder">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21,15 16,10 5,21"/>
                    </svg>
                  </div>
                {% endif %}
                
                {% if product.compare_at_price > product.price %}
                  <div class="product-badge">Sale</div>
                {% endif %}
              </div>
              
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                <div class="product-price">
                  <span class="current-price">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="original-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
                
                <div class="product-cta">
                  <span class="cta-text">View</span>
                  <span class="cta-underline"></span>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
      
      <!-- Swiper Navigation -->
      <div class="featured-swiper-button-prev">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </div>
      <div class="featured-swiper-button-next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </div>
    </div>
  </div>
  
  <!-- View All CTA -->
  {% if section.settings.view_all_url != blank %}
    <div class="view-all-cta">
      <a href="{{ section.settings.view_all_url }}" class="view-all-button">
        View All
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12,5 19,12 12,19"></polyline>
        </svg>
      </a>
    </div>
  {% endif %}
  
  <!-- Gothic Frame Bottom -->
  <div class="gothic-frame gothic-frame-bottom">
    <div class="frame-corner frame-corner-left">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
    <div class="frame-border frame-border-bottom">
      <div class="border-center-ornament">
        <div class="ornament-diamond"></div>
        <div class="ornament-lines">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <div class="frame-corner frame-corner-right">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
  </div>
</section>

