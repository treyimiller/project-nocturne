{%- comment %}<locksmith:faef>{% endcomment -%}
  {%- include 'locksmith' -%}
{%- comment %}</locksmith:faef>{% endcomment -%}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {{ locksmith_initializations }}
    {% # Google Fonts %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=EB+Garamond:wght@400;500;600;700&display=swap" rel="stylesheet">

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
    
    {% comment %} Preloader styles in head to prevent flash {% endcomment %}
    <style>
      body { visibility: hidden; }
      .preloader {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        width: 100vw !important;
        height: 100vh !important;
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        z-index: 9999 !important;
        margin: 0 !important;
        padding: 0 !important;
        box-sizing: border-box !important;
        opacity: 1 !important;
        visibility: visible !important;
      }
      
      .preloader-image {
        width: 100vw !important;
        height: 100vh !important;
        object-fit: cover !important;
        object-position: center center !important;
      }
      
      .preloader-content {
        text-align: center !important;
        position: relative !important;
        z-index: 2 !important;
      }
    </style>
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    
    {% section 'cart-drawer' %}
    
    <script>
      // Fallback to show body if no preloader exists
      document.addEventListener('DOMContentLoaded', function() {
        if (!document.getElementById('preloader') && !document.getElementById('mobile-preloader')) {
          document.body.style.visibility = 'visible';
        }
      });
    </script>
  </body>
</html>
