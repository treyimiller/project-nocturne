<!-- Limited Access Page Section -->
{% if section.settings.display_mode == 'full_page' %}
  <!-- Full Page Content Display -->
  <div class="limited-access-full-page">
    <!-- Page Content -->
    {% if page.content != blank %}
      <div class="page-content">
        {{ page.content }}
      </div>
    {% endif %}
    
    <!-- Exclusive Content -->
    <div class="exclusive-content-section">
      {% if section.settings.password_protected_content != blank %}
        {{ section.settings.password_protected_content }}
      {% else %}
        <div class="default-exclusive-content">
          <h2>Exclusive Access Content</h2>
          <p>Welcome to our exclusive content area with special access benefits and premium products.</p>
          
          <div class="exclusive-benefits">
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>Access to exclusive products</span>
            </div>
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              <span>Early release notifications</span>
            </div>
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span>Special member pricing</span>
            </div>
          </div>
          
          {% if section.settings.exclusive_collection != blank %}
            <div class="exclusive-products-section">
              <h3>Exclusive Products</h3>
              <div class="products-grid">
                {% assign exclusive_collection = collections[section.settings.exclusive_collection] %}
                {% for product in exclusive_collection.products limit: 8 %}
                  <div class="product-card">
                    <a href="{{ product.url }}">
                      {% if product.featured_image %}
                        <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
                      {% endif %}
                      <h4>{{ product.title }}</h4>
                      <span class="price">{{ product.price | money }}</span>
                    </a>
                  </div>
                {% endfor %}
              </div>
              {% if exclusive_collection.products.size > 8 %}
                <a href="{{ exclusive_collection.url }}" class="view-all-products">View All Exclusive Items</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
{% else %}
  <!-- Original Access Gate Display -->
  <div class="limited-access-page">
    <!-- Atmospheric Background -->
    <div class="limited-access-atmosphere">
      <div class="atmosphere-texture"></div>
      <div class="atmosphere-gradient"></div>
      <div class="restricted-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
      </div>
    </div>

    <div class="limited-access-container">
      <!-- Access Gate Header -->
      <div class="access-gate-header">
        <!-- Lock Icon -->
        <div class="lock-icon">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <circle cx="12" cy="16" r="1"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
        </div>
        
        <!-- Access Title -->
        <h1 class="access-title">
          {% if section.settings.access_title != blank %}
            {{ section.settings.access_title }}
          {% else %}
            Limited Access
          {% endif %}
        </h1>
        
        <!-- Access Subtitle -->
        <div class="access-subtitle">
          {% if section.settings.access_subtitle != blank %}
            {{ section.settings.access_subtitle }}
          {% else %}
            Exclusive Content Area
          {% endif %}
        </div>
        
        <!-- Access Message -->
        <div class="access-message">
          {% if section.settings.access_message != blank %}
            <p>{{ section.settings.access_message }}</p>
          {% else %}
            <p>This content is restricted to verified members only. Please verify your access credentials below.</p>
          {% endif %}
        </div>
      </div>

    <!-- Access Methods -->
    <div class="access-methods">
      <!-- Password Access -->
      {% if section.settings.enable_password_access %}
        <div class="access-method password-access">
          <div class="method-header">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4"/>
                <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
                <path d="M3 12c1 0 3-1-3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
                <path d="M13 12c0-1.5 0-3 0-3s-1-2-3-2-3 2-3 2v3"/>
              </svg>
            </div>
            <h3 class="method-title">Access Code</h3>
            <p class="method-description">Enter your exclusive access code</p>
          </div>
          
          <!-- Password Entry Form -->
          <div id="password-entry" class="password-entry">
            <form class="password-form">
              <div class="input-group">
                <input 
                  type="password" 
                  id="access-password"
                  placeholder="Enter access code"
                  class="access-input"
                  required
                >
                <button type="submit" class="access-submit">
                  <span>Verify</span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </button>
              </div>
              <div id="password-error" class="password-error" style="display: none;">
                <p>Incorrect access code. Please try again.</p>
              </div>
            </form>
          </div>
          
          <!-- Access Granted Message -->
          <div id="access-granted-message" class="access-granted-message" style="display: none;">
            <div class="method-header">
              <div class="method-icon verified">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22,4 12,14.01 9,11.01"/>
                </svg>
              </div>
              <h3 class="method-title">Access Granted</h3>
              <p class="method-description">Loading exclusive content...</p>
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Email Verification -->
      {% if section.settings.enable_email_verification %}
        <div class="access-method email-verification">
          <div class="method-header">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <h3 class="method-title">Email Verification</h3>
            <p class="method-description">Verify your membership status</p>
          </div>
          
          <form class="email-form" action="{{ routes.account_url }}" method="post">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            
            <div class="input-group">
              <input 
                type="email" 
                name="customer[email]" 
                placeholder="Enter your email address"
                class="access-input"
                required
              >
              <button type="submit" class="access-submit">
                <span>Verify</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
          </form>
        </div>
      {% endif %}

    </div>

    <!-- Additional Information -->
    <div class="access-footer">
      {% if section.settings.footer_message != blank %}
        <p class="footer-message">{{ section.settings.footer_message }}</p>
      {% endif %}
      
      <div class="help-links">
        <a href="{{ routes.root_url }}" class="back-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Store
        </a>
        
        {% if section.settings.contact_link %}
          <a href="{{ section.settings.contact_link }}" class="contact-link">
            Need Help?
          </a>
        {% endif %}
      </div>
    </div>
    </div>
  </div>

  <!-- Full Page Content Area (shown when access is granted) -->
  <div id="full-page-content" class="full-page-exclusive-content" style="display: none;">
    <div class="page-content">
      {% if page.content != blank %}
        {{ page.content }}
      {% endif %}
    </div>
    
    <div class="exclusive-content-section">
      {% if section.settings.password_protected_content != blank %}
        {{ section.settings.password_protected_content }}
      {% else %}
        <div class="default-exclusive-content">
          <h2>Exclusive Access Content</h2>
          <p>Welcome to our exclusive content area with special access benefits and premium products.</p>
          
          <div class="exclusive-benefits">
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>Access to exclusive products</span>
            </div>
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              <span>Early release notifications</span>
            </div>
            <div class="benefit-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span>Special member pricing</span>
            </div>
          </div>
          
          {% if section.settings.exclusive_collection != blank %}
            <div class="exclusive-products-section">
              <h3>Exclusive Products</h3>
              <div class="products-grid">
                {% assign exclusive_collection = collections[section.settings.exclusive_collection] %}
                {% for product in exclusive_collection.products limit: 12 %}
                  <div class="product-card">
                    <a href="{{ product.url }}">
                      {% if product.featured_image %}
                        <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
                      {% endif %}
                      <h4>{{ product.title }}</h4>
                      <span class="price">{{ product.price | money }}</span>
                    </a>
                  </div>
                {% endfor %}
              </div>
              {% if exclusive_collection.products.size > 12 %}
                <a href="{{ exclusive_collection.url }}" class="view-all-products">View All Exclusive Items</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
      
      <div class="session-controls">
        <div class="session-info">
          <p>Session expires in <span id="session-timer">30:00</span></p>
          <button id="reset-access" class="reset-btn">Reset Access</button>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% stylesheet %}
  /* Full Page Exclusive Content Styles */
  .full-page-exclusive-content {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--color-background);
    z-index: 1000;
    overflow-y: auto;
    padding: 2rem 0;
  }
  
  .full-page-exclusive-content .page-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    margin-bottom: 3rem;
  }
  
  .full-page-exclusive-content .exclusive-content-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .session-controls {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: var(--color-background-ui);
    padding: 1rem;
    border-radius: 8px;
    border: 2px solid rgba(215, 38, 56, 0.1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    z-index: 1001;
  }
  
  @media (max-width: 768px) {
    .session-controls {
      bottom: 2rem;
      top: auto;
      right: 1rem;
      left: 1rem;
      width: auto;
      padding: 0.75rem;
    }
  }
  
  .session-controls .session-info {
    margin: 0;
    text-align: center;
  }
  
  .session-controls .session-info p {
    font-family: 'Oswald', sans-serif;
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .session-controls #session-timer {
    color: rgba(215, 38, 56, 0.8);
    font-weight: 500;
  }
  
  .session-controls .reset-btn {
    padding: 0.5rem 1rem;
    background: transparent;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 1px solid rgba(156, 163, 175, 0.3);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.7;
    width: 100%;
  }
  
  .session-controls .reset-btn:hover {
    opacity: 1;
    border-color: rgba(215, 38, 56, 0.3);
    color: rgba(215, 38, 56, 0.8);
  }

