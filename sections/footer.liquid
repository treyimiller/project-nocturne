<footer class="site-footer">
  <!-- Background Texture -->
  <div class="footer-texture">
    <div class="footer-noise"></div>
    <div class="footer-gradient"></div>
  </div>
  
  <!-- Gothic Border -->
  <div class="footer-border">
    <div class="border-line border-primary"></div>
    <div class="border-line border-secondary"></div>
    <div class="border-ornament">
      <div class="ornament-center"></div>
      <div class="ornament-left"></div>
      <div class="ornament-right"></div>
    </div>
  </div>
  
  <!-- Footer Content -->
  <div class="footer-content">
    <!-- Policy Links -->
    <div class="footer-section links-section">
      <nav class="footer-links">
        {% if section.settings.privacy_policy_url != blank %}
          <a href="{{ section.settings.privacy_policy_url }}" class="footer-link">Privacy Policy</a>
        {% endif %}
        {% if section.settings.terms_conditions_url != blank %}
          <a href="{{ section.settings.terms_conditions_url }}" class="footer-link">Terms & Conditions</a>
        {% endif %}
        {% if section.settings.returns_policy_url != blank %}
          <a href="{{ section.settings.returns_policy_url }}" class="footer-link">Returns & Exchanges</a>
        {% endif %}
        {% if section.settings.contact_url != blank %}
          <a href="{{ section.settings.contact_url }}" class="footer-link">Contact Us</a>
        {% endif %}
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
        {% endfor %}
      </nav>
    </div>
    
    <!-- Copyright -->
    <div class="footer-section copyright-section">
      <p class="copyright-text">
        Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
      {% if section.settings.additional_text != blank %}
        <p class="additional-text">{{ section.settings.additional_text }}</p>
      {% endif %}
    </div>
  </div>
  
  <!-- Payment Options Bottom -->
  {% if section.settings.show_payment_icons %}
    <div class="payment-bottom">
      <div class="payment-icons">
        {% for type in shop.enabled_payment_types %}
          <div class="payment-icon">
            {{ type | payment_type_svg_tag }}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</footer>

{% stylesheet %}
  /* Footer Background Texture */
  .footer-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .footer-noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 25% 75%, rgba(215, 38, 56, 0.04) 0.5px, transparent 0.5px),
      radial-gradient(circle at 75% 25%, rgba(215, 38, 56, 0.03) 0.5px, transparent 0.5px),
      radial-gradient(circle at 50% 90%, rgba(215, 38, 56, 0.02) 1px, transparent 1px);
    background-size: 20px 20px, 30px 30px, 40px 40px;
    animation: footerTextureShift 50s linear infinite;
    opacity: 0.6;
  }
  
  .footer-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, 
      transparent 0%, 
      rgba(215, 38, 56, 0.015) 30%, 
      rgba(215, 38, 56, 0.03) 100%);
    z-index: 2;
  }
  
  /* Gothic Border */
  .footer-border {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    z-index: 3;
    opacity: 0;
    animation: fadeInBorder 1s ease-out 0.3s forwards;
  }
  
  .footer-border .border-line {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
  }
  
  .footer-border .border-primary {
    top: 2px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(215, 38, 56, 0.05) 10%,
      rgba(215, 38, 56, 0.15) 25%,
      rgba(215, 38, 56, 0.25) 40%,
      rgba(215, 38, 56, 0.3) 50%,
      rgba(215, 38, 56, 0.25) 60%,
      rgba(215, 38, 56, 0.15) 75%,
      rgba(215, 38, 56, 0.05) 90%,
      transparent 100%);
    filter: blur(0.3px);
    animation: borderGlow 10s ease-in-out infinite;
  }
  
  .footer-border .border-secondary {
    top: 4px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(215, 38, 56, 0.03) 15%,
      rgba(215, 38, 56, 0.08) 35%,
      rgba(215, 38, 56, 0.18) 45%,
      rgba(215, 38, 56, 0.2) 50%,
      rgba(215, 38, 56, 0.18) 55%,
      rgba(215, 38, 56, 0.08) 65%,
      rgba(215, 38, 56, 0.03) 85%,
      transparent 100%);
    filter: blur(0.2px);
    animation: borderGlow 10s ease-in-out infinite 3s;
  }
  
  .footer-border .border-ornament {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
  }
  
  .footer-border .ornament-center {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(215, 38, 56, 0.6) 20%,
      rgba(215, 38, 56, 0.8) 40%,
      rgba(215, 38, 56, 1) 50%,
      rgba(215, 38, 56, 0.8) 60%,
      rgba(215, 38, 56, 0.6) 80%,
      transparent 100%);
    animation: ornamentPulse 8s ease-in-out infinite;
    border-radius: 1px;
  }
  
  .footer-border .ornament-left,
  .footer-border .ornament-right {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 1px;
    background: linear-gradient(90deg,
      rgba(215, 38, 56, 0.25) 0%,
      rgba(215, 38, 56, 0.08) 100%);
  }
  
  .footer-border .ornament-left {
    left: calc(50% - 40px);
    animation: ornamentPulse 8s ease-in-out infinite 1.5s;
  }
  
  .footer-border .ornament-right {
    right: calc(50% - 40px);
    transform: translateY(-50%) scaleX(-1);
    animation: ornamentPulseRight 8s ease-in-out infinite 1.5s;
  }

  /* Main Footer Styles */
  .site-footer {
    position: relative;
    width: 100vw;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-background);
    padding: 3rem 2rem 1.5rem;
    margin-top: 4rem;
    box-shadow: 
      inset 0 1px 0 rgba(215, 38, 56, 0.02),
      0 -4px 20px rgba(0, 0, 0, 0.2);
    z-index: 50;
  }
  
  .footer-content {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
    z-index: 3;
    margin-bottom: 2rem;
  }
  
  /* Footer Sections */
  .footer-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .footer-title {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
  }
  
  /* Payment Bottom Section */
  .payment-bottom {
    position: relative;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(215, 38, 56, 0.05);
    z-index: 3;
  }
  
  .payment-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .payment-icon {
    transition: all 0.3s ease;
    opacity: 0.6;
  }
  
  .payment-icon:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  
  .payment-icon svg {
    filter: drop-shadow(0 1px 3px rgba(0, 0, 0, 0.3));
    color: var(--color-foreground);
    height: 24px;
    width: auto;
  }
  
  /* Footer Links */
  .footer-links {
    display: flex;
    flex-direction: row;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .footer-link {
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 300;
    color: var(--color-foreground);
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    opacity: 0.7;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  
  .footer-link:hover {
    opacity: 1;
    color: var(--color-foreground);
    transform: translateY(-1px);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  /* Copyright */
  .copyright-text {
    font-family: 'Oswald', sans-serif;
    font-size: 0.85rem;
    font-weight: 300;
    color: var(--color-foreground);
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    opacity: 0.6;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  
  .additional-text {
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 300;
    color: rgba(215, 38, 56, 0.8);
    letter-spacing: 0.05em;
    opacity: 1;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2), 0 0 8px rgba(215, 38, 56, 0.3);
  }
  
  /* Animations */
  @keyframes footerTextureShift {
    0% {
      background-position: 0px 0px, 0px 0px, 0px 0px;
    }
    100% {
      background-position: 20px 20px, -30px 30px, 40px -40px;
    }
  }
  
  @keyframes fadeInBorder {
    to {
      opacity: 1;
    }
  }
  
  @keyframes borderGlow {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }
  
  @keyframes ornamentPulse {
    0%, 100% {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
    50% {
      opacity: 0.7;
      transform: translate(-50%, -50%);
    }
  }
  
  @keyframes ornamentPulseRight {
    0%, 100% {
      opacity: 1;
      transform: translateY(-50%) scaleX(-1);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-50%) scaleX(-1);
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .site-footer {
      padding: 2rem 1rem 1rem;
      margin-top: 3rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 1.5rem;
    }
    
    .payment-icons {
      gap: 0.75rem;
    }
    
    .payment-icon svg {
      height: 20px;
    }
    
    .footer-links {
      gap: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .site-footer {
      padding: 1.5rem 1rem 1rem;
      margin-top: 2rem;
    }
    
    .footer-content {
      gap: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .footer-title {
      font-size: 0.9rem;
      margin-bottom: 0.75rem;
    }
    
    .payment-icons {
      gap: 0.5rem;
    }
    
    .payment-icon svg {
      height: 18px;
    }
    
    .payment-bottom {
      margin-top: 1rem;
      padding-top: 1rem;
    }
    
    .footer-links {
      gap: 1rem;
      flex-direction: column;
    }
    
    .footer-link {
      font-size: 0.85rem;
    }
    
    .copyright-text {
      font-size: 0.8rem;
    }
    
    .additional-text {
      font-size: 0.7rem;
    }
  }
{% endstylesheet %}

