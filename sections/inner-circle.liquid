<!-- Inner Circle - Advance Access Section -->
<div class="inner-circle-page full-width">
  <!-- Atmospheric Background -->
  <div class="inner-circle-atmosphere">
    <div class="atmosphere-texture"></div>
    <div class="atmosphere-gradient"></div>
  </div>

  <div class="inner-circle-container">
    <!-- Inner Circle Header -->
    <div class="inner-circle-header">
      <h1 class="inner-circle-title">
        {% if section.settings.page_title != blank %}
          {{ section.settings.page_title }}
        {% else %}
          The Inner Circle
        {% endif %}
      </h1>
      <div class="inner-circle-subtitle">
        {% if section.settings.page_subtitle != blank %}
          {{ section.settings.page_subtitle }}
        {% else %}
          Advance Access
        {% endif %}
      </div>
      
      <div class="inner-circle-description">
        {% if section.settings.page_description != blank %}
          <p>{{ section.settings.page_description }}</p>
        {% else %}
          <p>Exclusive access to limited releases, early drops, and member-only products. Join our elite community of collectors and enthusiasts.</p>
        {% endif %}
      </div>
      
      <!-- Membership Stats -->
      <div class="inner-circle-stats">
        <div class="stat-item">
          <span class="stat-number">{{ collections['inner-circle'].products_count | default: 0 }}</span>
          <span class="stat-label">Exclusive Items</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">48HR</span>
          <span class="stat-label">Early Access</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">VIP</span>
          <span class="stat-label">Status</span>
        </div>
      </div>
    </div>

    <!-- Inner Circle Products Grid -->
    <div class="inner-circle-products">
      {% assign inner_circle_collection = collections['inner-circle'] %}
      {% if inner_circle_collection and inner_circle_collection.products.size > 0 %}
        <div class="products-grid">
          {%- comment %}<locksmith:3e98>{% endcomment -%}
            {%- assign locksmith_9e21_forloop__size = 0 %}{% for product in inner_circle_collection.products limit: 12 %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: inner_circle_collection, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_9e21_forloop__size = locksmith_9e21_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_9e21_forloop__index = nil -%}
          {%- comment %}</locksmith:3e98>{% endcomment -%}
          {% for product in inner_circle_collection.products limit: 12 %}
            {%- comment %}<locksmith:da34>{% endcomment -%}
              {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: inner_circle_collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_9e21_forloop__index == nil %}{% assign locksmith_9e21_forloop__index = 1 %}{% assign locksmith_9e21_forloop__index0 = 0 %}{% else %}{% assign locksmith_9e21_forloop__index = locksmith_9e21_forloop__index | plus: 1 %}{% assign locksmith_9e21_forloop__index0 = locksmith_9e21_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_9e21_forloop__index == 1 %}{% assign locksmith_9e21_forloop__first = true %}{% else %}{% assign locksmith_9e21_forloop__first = false %}{% endif %}{% if locksmith_9e21_forloop__index == locksmith_9e21_forloop__size %}{% assign locksmith_9e21_forloop__last = true %}{% else %}{% assign locksmith_9e21_forloop__last = false %}{% endif %}{% assign locksmith_9e21_forloop__rindex = locksmith_9e21_forloop__size | minus: locksmith_9e21_forloop__index | minus: 1 %}{% assign locksmith_9e21_forloop__rindex0 = locksmith_9e21_forloop__size | minus: locksmith_9e21_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
            {%- comment %}</locksmith:da34>{% endcomment -%}
            <div class="inner-circle-product-card">
              <a href="{{ product.url }}" class="product-card-link">
                <!-- Product Image -->
                <div class="product-image-container">
                  {% if product.featured_image %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 400 }}" 
                      alt="{{ product.featured_image.alt | default: product.title }}"
                      class="product-image"
                      loading="{% if locksmith_9e21_forloop__index <= 8 %}eager{% else %}lazy{% endif %}"
                    >
                  {% else %}
                    <div class="product-image-placeholder">
                      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5"/>
                        <polyline points="21,15 16,10 5,21"/>
                      </svg>
                    </div>
                  {% endif %}
                  
                  <!-- Product Overlay -->
                  <div class="product-overlay">
                    <span class="view-product">View Exclusive</span>
                  </div>
                  
                  <!-- Exclusive Badge -->
                  <div class="exclusive-badge">Members Only</div>
                  
                  <!-- Sale Badge -->
                  {% assign current_variant = product.selected_or_first_available_variant %}
                  {% if current_variant.compare_at_price > current_variant.price %}
                    <div class="sale-badge">Sale</div>
                  {% endif %}
                </div>
                
                <!-- Product Content -->
                <div class="product-content">
                  <h3 class="product-title">{{ product.title }}</h3>
                  
                  <div class="product-pricing">
                    <span class="current-price">{{ current_variant.price | money }}</span>
                    {% if current_variant.compare_at_price > current_variant.price %}
                      <span class="original-price">{{ current_variant.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  
                  {% if product.available == false %}
                    <div class="product-status sold-out">Sold Out</div>
                  {% else %}
                    <div class="product-status exclusive">Early Access</div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
        
        <!-- View All Button -->
        {% if inner_circle_collection.products.size > 12 %}
          <div class="view-all-container">
            <a href="{{ inner_circle_collection.url }}" class="view-all-btn">View All Exclusive Items</a>
          </div>
        {% endif %}
      {% else %}
        <!-- No Exclusive Products -->
        <div class="inner-circle-empty">
          <div class="empty-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polygon points="10,8 16,12 10,16"/>
            </svg>
          </div>
          <h2 class="empty-title">Coming Soon</h2>
          <p class="empty-text">Our exclusive collection is being curated. Check back soon for member-only releases and early access drops.</p>
          <a href="{{ routes.all_products_collection_url }}" class="browse-all-btn">Browse All Products</a>
        </div>
      {% endif %}
    </div>

    <!-- Membership Benefits -->
    <div class="membership-benefits">
      <div class="benefits-header">
        <h2 class="benefits-title">Member Benefits</h2>
        <p class="benefits-subtitle">What you get with Inner Circle access</p>
      </div>
      
      <div class="benefits-grid">
        <div class="benefit-item">
          <div class="benefit-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="benefit-title">Exclusive Products</h3>
          <p class="benefit-description">Access to limited releases and member-only items</p>
        </div>
        
        <div class="benefit-item">
          <div class="benefit-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <h3 class="benefit-title">48-Hour Early Access</h3>
          <p class="benefit-description">Get first access to new drops before public release</p>
        </div>
        
        <div class="benefit-item">
          <div class="benefit-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="benefit-title">VIP Support</h3>
          <p class="benefit-description">Priority customer service and exclusive support</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  /* Inner Circle Page Styles */
  .inner-circle-page {
    position: relative;
    min-height: 100vh;
    background-color: var(--color-background);
    overflow: hidden;
  }
  
  /* Atmospheric Background */
  .inner-circle-atmosphere {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .atmosphere-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(215, 38, 56, 0.03) 0.5px, transparent 0.5px),
      radial-gradient(circle at 80% 70%, rgba(215, 38, 56, 0.02) 0.5px, transparent 0.5px),
      radial-gradient(circle at 40% 80%, rgba(215, 38, 56, 0.015) 1px, transparent 1px);
    background-size: 25px 25px, 35px 35px, 50px 50px;
    animation: atmosphereShift 80s linear infinite;
    opacity: 0.6;
  }
  
  .atmosphere-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, 
      rgba(215, 38, 56, 0.012) 0%, 
      rgba(215, 38, 56, 0.005) 40%, 
      transparent 70%);
  }
  
  /* Inner Circle Container */
  .inner-circle-container {
    position: relative;
    width: 100%;
    padding: 3rem 2rem;
    z-index: 2;
  }
  
  /* Inner Circle Header */
  .inner-circle-header {
    max-width: 1200px;
    margin: 0 auto 4rem;
    text-align: center;
    padding-bottom: 3rem;
    border-bottom: 2px solid rgba(215, 38, 56, 0.15);
  }
  
  .inner-circle-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    text-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    background: linear-gradient(135deg, 
      var(--color-foreground) 0%, 
      rgba(215, 38, 56, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .inner-circle-subtitle {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-weight: 300;
    color: rgba(215, 38, 56, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 2rem;
  }
  
  .inner-circle-description {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .inner-circle-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-family: 'Oswald', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: rgba(215, 38, 56, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    font-family: 'Oswald', sans-serif;
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
  }
  
  /* Inner Circle Products */
  .inner-circle-products {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .inner-circle-product-card {
    background-color: var(--color-background-ui);
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid rgba(215, 38, 56, 0.08);
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(215, 38, 56, 0.03);
    transition: all 0.4s ease;
    position: relative;
  }
  
  .inner-circle-product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(215, 38, 56, 0.3) 50%, 
      transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .inner-circle-product-card:hover {
    transform: translateY(-6px);
    border-color: rgba(215, 38, 56, 0.15);
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.35),
      inset 0 1px 0 rgba(215, 38, 56, 0.06);
  }
  
  .inner-circle-product-card:hover::before {
    opacity: 1;
  }
  
  .product-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .product-image-container {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    background-color: rgba(215, 38, 56, 0.02);
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .product-card-link:hover .product-image {
    transform: scale(1.08);
  }
  
  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-foreground);
    opacity: 0.3;
  }
  
  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(0, 0, 0, 0.7) 0%, 
      rgba(0, 0, 0, 0.4) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .product-card-link:hover .product-overlay {
    opacity: 1;
  }
  
  .view-product {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.8) 0%, 
      rgba(160, 27, 42, 0.9) 100%);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    border: 2px solid rgba(215, 38, 56, 0.4);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(215, 38, 56, 0.2);
  }
  
  .exclusive-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.95) 0%, 
      rgba(160, 27, 42, 1) 100%);
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    box-shadow: 0 3px 12px rgba(215, 38, 56, 0.4);
    z-index: 2;
  }
  
  .sale-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.9) 0%, 
      rgba(160, 27, 42, 0.95) 100%);
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(215, 38, 56, 0.3);
    z-index: 2;
  }
  
  .product-content {
    padding: 1.5rem;
  }
  
  .product-title {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  
  .product-pricing {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }
  
  .current-price {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: rgba(215, 38, 56, 0.9);
  }
  
  .original-price {
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--color-foreground);
    opacity: 0.6;
    text-decoration: line-through;
  }
  
  .product-status {
    font-family: 'Oswald', sans-serif;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    display: inline-block;
  }
  
  .product-status.sold-out {
    color: var(--color-foreground);
    opacity: 0.6;
    background-color: rgba(100, 100, 100, 0.2);
  }
  
  .product-status.exclusive {
    color: var(--color-foreground);
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.2) 0%, 
      rgba(160, 27, 42, 0.25) 100%);
    border: 1px solid rgba(215, 38, 56, 0.3);
  }
  
  /* View All Button */
  .view-all-container {
    text-align: center;
    margin: 3rem 0;
  }
  
  .view-all-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.25rem 2.5rem;
