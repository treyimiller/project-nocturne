<!-- JavaScript for Featured Products Swiper -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Featured Products Mobile Swiper Functionality
  const featuredSwiperContainer = document.querySelector('.featured-swiper-container');
  if (featuredSwiperContainer) {
    let currentFeaturedSlide = 0;
    const featuredSlides = document.querySelectorAll('.featured-swiper-slide');
    const totalFeaturedSlides = featuredSlides.length;
    const featuredSwiperWrapper = document.querySelector('.featured-swiper-wrapper');
    const featuredPagination = document.querySelector('.featured-swiper-pagination');
    const featuredPrevBtn = document.querySelector('.featured-swiper-button-prev');
    const featuredNextBtn = document.querySelector('.featured-swiper-button-next');
    
    // Create pagination dots for featured products
    if (featuredPagination && totalFeaturedSlides > 1) {
      for (let i = 0; i < totalFeaturedSlides; i++) {
        const dot = document.createElement('span');
        dot.classList.add('featured-pagination-dot');
        if (i === 0) dot.classList.add('active');
        dot.addEventListener('click', () => goToFeaturedSlide(i));
        featuredPagination.appendChild(dot);
      }
    }
    
    // Update featured slide position
    function updateFeaturedSlide() {
      if (featuredSwiperWrapper) {
        featuredSwiperWrapper.style.transform = `translateX(-${currentFeaturedSlide * 100}%)`;
        
        // Update pagination dots
        document.querySelectorAll('.featured-pagination-dot').forEach((dot, index) => {
          dot.classList.toggle('active', index === currentFeaturedSlide);
        });
      }
    }
    
    // Go to specific featured slide
    function goToFeaturedSlide(index) {
      currentFeaturedSlide = Math.max(0, Math.min(index, totalFeaturedSlides - 1));
      updateFeaturedSlide();
    }
    
    // Previous featured slide
    function prevFeaturedSlide() {
      if (currentFeaturedSlide > 0) {
        currentFeaturedSlide = currentFeaturedSlide - 1;
      } else {
        currentFeaturedSlide = totalFeaturedSlides - 1;
      }
      updateFeaturedSlide();
    }
    
    // Next featured slide
    function nextFeaturedSlide() {
      if (currentFeaturedSlide < totalFeaturedSlides - 1) {
        currentFeaturedSlide = currentFeaturedSlide + 1;
      } else {
        currentFeaturedSlide = 0;
      }
      updateFeaturedSlide();
    }
    
    // Button event listeners
    if (featuredPrevBtn) featuredPrevBtn.addEventListener('click', prevFeaturedSlide);
    if (featuredNextBtn) featuredNextBtn.addEventListener('click', nextFeaturedSlide);
    
    // Touch/swipe functionality for featured products
    let featuredStartX = 0;
    let featuredCurrentX = 0;
    let featuredIsDragging = false;
    let featuredHasSwiped = false;
    
    featuredSwiperContainer.addEventListener('touchstart', (e) => {
      featuredStartX = e.touches[0].clientX;
      featuredCurrentX = featuredStartX;
      featuredIsDragging = true;
      featuredHasSwiped = false;
    });
    
    featuredSwiperContainer.addEventListener('touchmove', (e) => {
      if (!featuredIsDragging) return;
      e.preventDefault();
      featuredCurrentX = e.touches[0].clientX;
    });
    
    featuredSwiperContainer.addEventListener('touchend', (e) => {
      if (!featuredIsDragging || featuredHasSwiped) {
        featuredIsDragging = false;
        return;
      }
      
      const diff = featuredStartX - featuredCurrentX;
      const threshold = 50; // Minimum swipe distance
      
      if (Math.abs(diff) > threshold) {
        if (diff > 0) {
          // Swiped left - go to next slide
          nextFeaturedSlide();
        } else {
          // Swiped right - go to previous slide
          prevFeaturedSlide();
        }
        featuredHasSwiped = true;
      }
      
      featuredIsDragging = false;
    });
    
    // Mouse drag functionality for desktop testing
    featuredSwiperContainer.addEventListener('mousedown', (e) => {
      featuredStartX = e.clientX;
      featuredCurrentX = featuredStartX;
      featuredIsDragging = true;
      featuredHasSwiped = false;
      e.preventDefault();
    });
    
    featuredSwiperContainer.addEventListener('mousemove', (e) => {
      if (!featuredIsDragging) return;
      e.preventDefault();
      featuredCurrentX = e.clientX;
    });
    
    featuredSwiperContainer.addEventListener('mouseup', () => {
      if (!featuredIsDragging || featuredHasSwiped) {
        featuredIsDragging = false;
        return;
      }
      
      const diff = featuredStartX - featuredCurrentX;
      const threshold = 50;
      
      if (Math.abs(diff) > threshold) {
        if (diff > 0) {
          // Dragged left - go to next slide
          nextFeaturedSlide();
        } else {
          // Dragged right - go to previous slide
          prevFeaturedSlide();
        }
        featuredHasSwiped = true;
      }
      
      featuredIsDragging = false;
    });
  }
  
  // Countdown Timer Functionality
  const countdownTimer = document.getElementById('countdown-timer');
  
  if (countdownTimer) {
    const launchDateStr = countdownTimer.getAttribute('data-launch-date');
    const launchDate = new Date(launchDateStr + 'T23:59:59').getTime();
    
    function updateCountdown() {
      const now = new Date().getTime();
      const distance = launchDate - now;
      
      if (distance < 0) {
        // Timer expired
        document.getElementById('days').textContent = '00';
        document.getElementById('hours').textContent = '00';
        document.getElementById('minutes').textContent = '00';
        document.getElementById('seconds').textContent = '00';
        return;
      }
      
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      
      document.getElementById('days').textContent = days.toString().padStart(2, '0');
      document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
      document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
      document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
    }
    
    // Initial update
    updateCountdown();
    
    // Update every second
    setInterval(updateCountdown, 1000);
  }
});
</script>

