<script>
document.addEventListener('DOMContentLoaded', function() {
  // Password Access Functionality
  const passwordForm = document.querySelector('.password-form');
  const passwordEntry = document.getElementById('password-entry');
  const accessGrantedMessage = document.getElementById('access-granted-message');
  const fullPageContent = document.getElementById('full-page-content');
  const passwordError = document.getElementById('password-error');
  const sessionTimer = document.getElementById('session-timer');
  const resetButton = document.getElementById('reset-access');
  
  // Get the access password from section settings and create unique page identifier
  const accessPassword = '{{ section.settings.access_password | default: "AUDENTIA2025" }}';
  const pageHandle = '{{ page.handle | default: "unknown" }}';
  const pageAccessKey = `limitedAccess_${pageHandle}`;
  const pageTimeKey = `accessTime_${pageHandle}`;
  
  if (passwordForm) {
    passwordForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const enteredPassword = document.getElementById('access-password').value;
      
      if (enteredPassword === accessPassword) {
        // Password correct - show access granted message briefly then full content
        passwordEntry.style.display = 'none';
        accessGrantedMessage.style.display = 'block';
        
        // Store access in sessionStorage with page-specific key
        sessionStorage.setItem(pageAccessKey, 'true');
        sessionStorage.setItem(pageTimeKey, Date.now().toString());
        
        // After 1.5 seconds, show full page content
        setTimeout(() => {
          const limitedAccessPage = document.querySelector('.limited-access-page');
          if (limitedAccessPage) limitedAccessPage.style.display = 'none';
          if (accessGrantedMessage) accessGrantedMessage.style.display = 'none';
          if (fullPageContent) {
            fullPageContent.style.display = 'block';
            document.body.style.overflow = 'auto';
          }
        }, 1500);
        
        // Start session timer
        startSessionTimer();
      } else {
        // Password incorrect - show error
        passwordError.style.display = 'block';
        document.getElementById('access-password').value = '';
        
        // Hide error after 3 seconds
        setTimeout(() => {
          passwordError.style.display = 'none';
        }, 3000);
      }
    });
  }
  
  // Check if access was previously granted for this specific page
  if (sessionStorage.getItem(pageAccessKey) === 'true') {
    const accessTime = parseInt(sessionStorage.getItem(pageTimeKey));
    const currentTime = Date.now();
    const sessionDuration = 30 * 60 * 1000; // 30 minutes in milliseconds
    
    if (accessTime && currentTime - accessTime < sessionDuration) {
      // Still within session time - show full page content directly
      const limitedAccessPage = document.querySelector('.limited-access-page');
      if (limitedAccessPage) limitedAccessPage.style.display = 'none';
      if (passwordEntry) passwordEntry.style.display = 'none';
      if (fullPageContent) {
        fullPageContent.style.display = 'block';
        document.body.style.overflow = 'auto';
      }
      
      // Start timer with remaining time
      const remainingTime = sessionDuration - (currentTime - accessTime);
      startSessionTimer(remainingTime);
    } else {
      // Session expired - clear storage for this page
      sessionStorage.removeItem(pageAccessKey);
      sessionStorage.removeItem(pageTimeKey);
    }
  }
  
  // Session timer functionality
  function startSessionTimer(initialTime = 30 * 60 * 1000) {
    let timeRemaining = initialTime;
    
    const timer = setInterval(() => {
      timeRemaining -= 1000;
      
      if (timeRemaining <= 0) {
        // Session expired
        clearInterval(timer);
        resetAccess();
        return;
      }
      
      // Update timer display
      const minutes = Math.floor(timeRemaining / 60000);
      const seconds = Math.floor((timeRemaining % 60000) / 1000);
      
      if (sessionTimer) {
        sessionTimer.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
      }
    }, 1000);
    
    // Store timer reference for cleanup
    if (window.accessTimer) {
      clearInterval(window.accessTimer);
    }
    window.accessTimer = timer;
  }
  
  // Reset access functionality
  function resetAccess() {
    // Clear session storage for this specific page
    sessionStorage.removeItem(pageAccessKey);
    sessionStorage.removeItem(pageTimeKey);
    
    // Clear any timers
    if (window.accessTimer) {
      clearInterval(window.accessTimer);
    }
    
    // Reset UI
    const limitedAccessPage = document.querySelector('.limited-access-page');
    if (limitedAccessPage) limitedAccessPage.style.display = 'flex';
    if (fullPageContent) fullPageContent.style.display = 'none';
    if (accessGrantedMessage) accessGrantedMessage.style.display = 'none';
    if (passwordEntry) passwordEntry.style.display = 'block';
    if (passwordError) passwordError.style.display = 'none';
    document.body.style.overflow = ''; // Restore background scrolling
    
    // Clear password input
    const passwordInput = document.getElementById('access-password');
    if (passwordInput) passwordInput.value = '';
  }
  
  // Reset button click handler
  if (resetButton) {
    resetButton.addEventListener('click', resetAccess);
  }
  
  // Clear access when page unloads (optional - comment out if you want persistent sessions)
  // window.addEventListener('beforeunload', resetAccess);
});
