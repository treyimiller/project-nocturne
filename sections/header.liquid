<header class="site-header">
  <!-- Background Texture -->
  <div class="header-texture">
    <div class="header-noise"></div>
  </div>
  
  <!-- Header Content -->
  <div class="header-content">
    <!-- Logo Section -->
    <div class="header-logo">
      {% if section.settings.logo_image %}
        <a href="{{ routes.root_url }}" class="logo-link">
          <img 
            src="{{ section.settings.logo_image | image_url: width: section.settings.logo_size }}" 
            alt="{{ shop.name }}"
            class="logo-image"
            width="{{ section.settings.logo_size }}"
            height="auto"
          >
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="logo-text">
          {{ shop.name }}
        </a>
      {% endif %}
    </div>
    
    <!-- Header Icons -->
    <div class="header-icons">
      <!-- Search Icon -->
      <button class="header-icon search-icon" aria-label="Search" type="button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
      </button>
      
      <!-- Account Icon -->
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header-icon account-icon" aria-label="Account">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>
      {% endif %}
      
      <!-- Cart Icon -->
      <a href="{{ routes.cart_url }}" class="header-icon cart-icon" aria-label="Cart">
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
      </a>
    </div>
  </div>
</header>

{% stylesheet %}
  /* Header Background Texture */
  .header-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .header-noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.04) 0.5px, transparent 0.5px),
      radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.03) 0.5px, transparent 0.5px),
      radial-gradient(circle at 50% 10%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 15px 15px, 25px 25px, 35px 35px;
    animation: headerTextureShift 40s linear infinite;
    opacity: 0.6;
  }
  
  /* Main Header Styles */
  .site-header {
    position: relative;
    height: 100px;
    background-color: var(--color-background);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 100;
  }
  
  .header-content {
    position: relative;
    height: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 2;
  }
  
  /* Logo Styles */
  .header-logo {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
  }
  
  .logo-link,
  .logo-text {
    display: block;
    text-decoration: none;
    transition: transform 0.3s ease;
  }
  
  .logo-link:hover,
  .logo-text:hover {
    transform: scale(1.05);
  }
  
  .logo-image {
    max-width: 200px;
    height: auto;
    display: block;
    filter: brightness(1.1);
  }
  
  .logo-text {
    font-family: 'Oswald', sans-serif;
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  /* Header Icons */
  .header-icons {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-left: auto;
  }
  
  .header-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-foreground);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }
  
  .header-icon:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
  }
  
  .header-icon svg {
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }
  
  .header-icon:hover svg {
    opacity: 1;
  }
  
  /* Search Button Specific */
  .search-icon {
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Cart Count Badge */
  .cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    min-width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    z-index: 4;
  }
  
  /* Animations */
  @keyframes headerTextureShift {
    0% {
      background-position: 0px 0px, 0px 0px, 0px 0px;
    }
    100% {
      background-position: 15px 15px, -25px 25px, 35px -35px;
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .site-header {
      height: 80px;
    }
    
    .header-content {
      padding: 0 1rem;
    }
    
    .header-icons {
      gap: 1rem;
    }
    
    .header-icon {
      width: 44px;
      height: 44px;
    }
    
    .logo-image {
      max-width: 150px;
    }
    
    .logo-text {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .site-header {
      height: 70px;
    }
    
    .header-content {
      padding: 0 1rem;
    }
    
    .header-icons {
      gap: 0.75rem;
    }
    
    .header-icon {
      width: 40px;
      height: 40px;
    }
    
    .header-icon svg {
      width: 20px;
      height: 20px;
    }
    
    .logo-image {
      max-width: 120px;
    }
    
    .logo-text {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_size",
      "min": 100,
      "max": 300,
      "step": 20,
      "unit": "px",
      "label": "Logo Size",
      "default": 200
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
