  /* Gothic Frame System */
  .gothic-frame {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    z-index: 3;
    opacity: 0;
    animation: frameReveal 2s ease-out 0.8s forwards;
  }
  
  .gothic-frame-top {
    margin-bottom: 4rem;
    margin-top: -1rem;
  }
  
  .gothic-frame-bottom {
    margin-top: 4rem;
    margin-bottom: -1rem;
  }
  
  .frame-corner {
    position: relative;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transform-style: preserve-3d;
    z-index: 3;
  }
  
  .corner-ornament {
    width: 14px;
    height: 14px;
    position: relative !important;
    z-index: 10 !important;
    transform: rotate(45deg) !important;
    transform-style: preserve-3d !important;
  }
  
  .corner-ornament::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    background: linear-gradient(135deg, rgba(215, 38, 56, 0.8) 0%, rgba(160, 27, 42, 0.7) 100%) !important;
    border-top: 3px solid rgba(215, 38, 56, 0.6) !important;
    border-left: 3px solid rgba(215, 38, 56, 0.6) !important;
