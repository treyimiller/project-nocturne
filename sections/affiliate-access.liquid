<script>
document.addEventListener('DOMContentLoaded', function() {
  // Check if affiliate access loading element exists (meaning user has affiliate access)
  const affiliateLoading = document.getElementById('affiliate-access-loading');
  const fullPageContent = document.getElementById('full-page-content');
  
  if (affiliateLoading && fullPageContent) {
    // Show full page content after 1.5 seconds
    setTimeout(() => {
      affiliateLoading.style.display = 'none';
      fullPageContent.style.display = 'block';
      document.body.style.overflow = 'hidden';
    }, 1500);
    
    // Add reset functionality
    const resetButton = document.getElementById('reset-access');
    if (resetButton) {
      resetButton.addEventListener('click', function() {
        fullPageContent.style.display = 'none';
        document.body.style.overflow = '';
        affiliateLoading.style.display = 'block';
      });
    }
  }
});
</script>

