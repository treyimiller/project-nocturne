<!-- 404 Page Container -->
<div class="error-page full-width">
  <!-- Atmospheric Background -->
  <div class="error-atmosphere">
    <div class="atmosphere-texture"></div>
    <div class="atmosphere-gradient"></div>
  </div>

  <!-- Floating Particles -->
  <div class="error-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>

  <div class="error-container">
    <!-- Error Content -->
    <div class="error-content">
      <!-- Error Icon -->
      <div class="error-icon">
        <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
      </div>

      <!-- Error Title -->
      <h1 class="error-title">{{ '404.title' | t | default: 'Page Not Found' }}</h1>

      <!-- Error Message -->
      <p class="error-message">
        {{ '404.not_found' | t | default: 'The page you are looking for has vanished into the shadows. It may have been moved, deleted, or never existed in this realm.' }}
      </p>


      <!-- Navigation Options -->
      <div class="error-actions">
        <a href="{{ routes.root_url }}" class="error-btn error-btn-primary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9,22 9,12 15,12 15,22"/>
          </svg>
          Return Home
        </a>

        <a href="{{ routes.all_products_collection_url }}" class="error-btn error-btn-secondary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          {{ '404.back_to_shopping' | t | default: 'Continue Shopping' }}
        </a>
      </div>

      <!-- Search Suggestion -->
      <div class="error-search">
        <p class="search-text">Try searching for what you need:</p>
        <form action="{{ routes.search_url }}" method="get" class="error-search-form">
          <div class="search-input-wrapper">
            <input 
              type="search" 
              name="q" 
              placeholder="Search products..." 
              class="error-search-input"
              autocomplete="off"
            >
            <button type="submit" class="error-search-btn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"/>
                <path d="M21 21l-4.35-4.35"/>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  /* 404 Page Styles */
  .error-page {
    position: relative;
    min-height: 100vh;
    background-color: var(--color-background);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Atmospheric Background */
  .error-atmosphere {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .atmosphere-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(215, 38, 56, 0.02) 0.5px, transparent 0.5px),
      radial-gradient(circle at 80% 70%, rgba(215, 38, 56, 0.015) 0.5px, transparent 0.5px),
      radial-gradient(circle at 40% 80%, rgba(215, 38, 56, 0.01) 1px, transparent 1px);
    background-size: 25px 25px, 35px 35px, 50px 50px;
    animation: atmosphereShift 80s linear infinite;
    opacity: 0.6;
  }
  
  .atmosphere-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, 
      rgba(215, 38, 56, 0.015) 0%, 
      rgba(215, 38, 56, 0.008) 40%, 
      transparent 70%);
  }
  
  /* Floating Particles */
  .error-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }
  
  .error-particles .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(215, 38, 56, 0.3);
    border-radius: 50%;
    animation: float 8s linear infinite;
  }
  
  .error-particles .particle:nth-child(1) {
    left: 10%;
    animation-delay: 0s;
    animation-duration: 6s;
  }
  
  .error-particles .particle:nth-child(2) {
    left: 20%;
    animation-delay: 1s;
    animation-duration: 8s;
  }
  
  .error-particles .particle:nth-child(3) {
    left: 30%;
    animation-delay: 2s;
    animation-duration: 7s;
  }
  
  .error-particles .particle:nth-child(4) {
    left: 40%;
    animation-delay: 0.5s;
    animation-duration: 9s;
  }
  
  .error-particles .particle:nth-child(5) {
    left: 60%;
    animation-delay: 1.5s;
    animation-duration: 6s;
  }
  
  .error-particles .particle:nth-child(6) {
    left: 70%;
    animation-delay: 3s;
    animation-duration: 8s;
  }
  
  .error-particles .particle:nth-child(7) {
    left: 80%;
    animation-delay: 2.5s;
    animation-duration: 7s;
  }
  
  .error-particles .particle:nth-child(8) {
    left: 90%;
    animation-delay: 1.2s;
    animation-duration: 9s;
  }
  
  /* Error Container */
  .error-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    padding: 2rem;
    z-index: 3;
  }
  
  .error-content {
    text-align: center;
    background-color: var(--color-background-ui);
    border-radius: 12px;
    padding: 4rem 3rem;
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(215, 38, 56, 0.05);
    border: 2px solid rgba(215, 38, 56, 0.1);
    backdrop-filter: blur(20px);
  }
  
  /* Error Icon */
  .error-icon {
    margin-bottom: 2rem;
    color: rgba(215, 38, 56, 0.6);
    animation: pulse 2s ease-in-out infinite;
  }
  
  /* Error Title */
  .error-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    color: rgba(215, 38, 56, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    text-shadow: 0 4px 16px rgba(215, 38, 56, 0.3);
  }
  
  /* Error Message */
  .error-message {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 3rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  
  /* Error Actions */
  .error-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }
  
  .error-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-family: 'Oswald', sans-serif;
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    min-width: 180px;
  }
  
  .error-btn-primary {
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.8) 0%, 
      rgba(160, 27, 42, 0.9) 100%);
    color: var(--color-foreground);
    border: 2px solid rgba(215, 38, 56, 0.3);
    box-shadow: 0 6px 20px rgba(215, 38, 56, 0.3);
  }
  
  .error-btn-primary:hover {
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.9) 0%, 
      rgba(160, 27, 42, 1) 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(215, 38, 56, 0.4);
  }
  
  .error-btn-secondary {
    background-color: var(--color-background-ui);
    color: var(--color-foreground);
    border: 2px solid rgba(215, 38, 56, 0.2);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  
  .error-btn-secondary:hover {
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.1) 0%, 
      rgba(160, 27, 42, 0.15) 100%);
    border-color: rgba(215, 38, 56, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }
  
  /* Error Search */
  .error-search {
    border-top: 1px solid rgba(215, 38, 56, 0.1);
    padding-top: 2rem;
  }
  
  .search-text {
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .search-input-wrapper {
    position: relative;
    max-width: 400px;
    margin: 0 auto;
    background-color: var(--color-background);
    border: 2px solid rgba(215, 38, 56, 0.1);
    border-radius: 50px;
    display: flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    transition: all 0.3s ease;
  }
  
  .search-input-wrapper:focus-within {
    border-color: rgba(215, 38, 56, 0.3);
    box-shadow: 0 0 0 4px rgba(215, 38, 56, 0.1);
  }
  
  .error-search-input {
    flex: 1;
    background: none;
    border: none;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.95rem;
    font-weight: 300;
    padding: 0.75rem 1rem;
    outline: none;
  }
  
  .error-search-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .error-search-btn {
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.8) 0%, 
      rgba(160, 27, 42, 0.9) 100%);
    border: none;
    color: var(--color-foreground);
    cursor: pointer;
    padding: 0.75rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(215, 38, 56, 0.3);
  }
  
  .error-search-btn:hover {
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.9) 0%, 
      rgba(160, 27, 42, 1) 100%);
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(215, 38, 56, 0.4);
  }
  
  /* Animations */
  @keyframes atmosphereShift {
    0% {
      background-position: 0px 0px, 0px 0px, 0px 0px;
    }
    100% {
      background-position: 25px 25px, -35px 35px, 50px -50px;
    }
  }
  
  @keyframes float {
    0% {
      transform: translateY(100vh) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100px) rotate(360deg);
      opacity: 0;
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .error-container {
      padding: 1rem;
    }
    
    .error-content {
      padding: 3rem 2rem;
    }
    
    .error-actions {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    
    .error-btn {
      width: 100%;
      max-width: 280px;
    }
  }
  
  @media (max-width: 480px) {
    .error-content {
      padding: 2rem 1.5rem;
    }
    
    .error-message {
      font-size: 1rem;
    }
    
    .search-input-wrapper {
      padding: 0.25rem 0.5rem;
    }
    
    .error-search-input {
      padding: 0.5rem 0.75rem;
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}

