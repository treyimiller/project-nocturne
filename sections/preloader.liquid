    {
      "type": "checkbox",
      "id": "enable_mobile_preloader",
      "label": "Enable Mobile Preloader",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "mobile_preloader_image",
      "label": "Mobile Preloader Image",
      "default": "shopify://shop_images/lowkeychriscansmd.png"
    },
    {
      "type": "range",
      "id": "mobile_preloader_size",
      "label": "Mobile Preloader Image Size",
      "min": 50,
      "max": 1500,
      "step": 50,
      "unit": "px",
      "default": 1500
    },
    {
      "type": "color",
      "id": "mobile_preloader_background",
      "label": "Mobile Preloader Background Color",
      "default": "#0E0E10"
    }
  ],
  "presets": [
    {
      "name": "Preloader",
      "category": "Loading"
    }
  ]
}
{% endschema %}