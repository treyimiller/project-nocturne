<header class="site-header">
  <!-- Background Texture -->
  <div class="header-texture">
    <div class="header-noise"></div>
    <div class="header-gradient"></div>
  </div>
  
  <!-- Header Shadow -->
  <div class="header-shadow"></div>
  
  <!-- Gothic Border -->
  <div class="header-border">
    <div class="border-line border-primary"></div>
    <div class="border-line border-secondary"></div>
    <div class="border-ornament">
      <div class="ornament-center"></div>
      <div class="ornament-left"></div>
      <div class="ornament-right"></div>
    </div>
  </div>
  
  <!-- Header Content -->
  <div class="header-content">
    <!-- Logo Section -->
    <div class="header-logo">
      {% if section.settings.logo_image %}
        <a href="{{ routes.root_url }}" class="logo-link">
          <img 
            src="{{ section.settings.logo_image | image_url: width: section.settings.logo_size }}" 
            alt="{{ shop.name }}"
            class="logo-image"
            width="{{ section.settings.logo_size }}"
            height="auto"
          >
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="logo-text">
          {{ shop.name }}
        </a>
      {% endif %}
    </div>
    
    <!-- Header Icons -->
    <div class="header-icons">
      <!-- Search Icon -->
      <button class="header-icon search-icon" aria-label="Search" type="button" id="search-toggle">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
      </button>
      
      <!-- Account Icon -->
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header-icon account-icon" aria-label="Account">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>
      {% endif %}
      
      <!-- Cart Icon -->
      <a href="{{ routes.cart_url }}" class="header-icon cart-icon" aria-label="Cart">
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
      </a>
    </div>
  </div>
</header>

<!-- Search Overlay -->
<div class="search-overlay" id="search-overlay" style="display: none;">
  <div class="search-container">
    <div class="search-box">
      <form action="{{ routes.search_url }}" method="get" class="search-form">
        <input 
          type="search" 
          name="q" 
          placeholder="Search products..." 
          class="search-input"
          autocomplete="off"
          id="search-input"
        >
        <button type="submit" class="search-submit" aria-label="Submit search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
        </button>
      </form>
      <button class="search-close" id="search-close" aria-label="Close search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchToggle = document.getElementById('search-toggle');
    const searchOverlay = document.getElementById('search-overlay');
    const searchClose = document.getElementById('search-close');
    const searchInput = document.getElementById('search-input');
    
    // Open search
    if (searchToggle) {
      searchToggle.addEventListener('click', function() {
        searchOverlay.style.display = 'block';
        document.body.style.overflow = 'hidden';
        setTimeout(function() {
          if (searchInput) {
            searchInput.focus();
          }
        }, 100);
      });
    }
    
    // Close search function
    function closeSearch() {
      searchOverlay.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
    
    // Close search on close button
    if (searchClose) {
      searchClose.addEventListener('click', closeSearch);
    }
    
    // Close search on overlay click
    if (searchOverlay) {
      searchOverlay.addEventListener('click', function(e) {
        if (e.target === searchOverlay) {
          closeSearch();
        }
      });
    }
    
    // Close search on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && searchOverlay.style.display === 'block') {
        closeSearch();
      }
    });
  });
</script>

{% stylesheet %}
  /* Header Background Texture */
  .header-texture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .header-noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.04) 0.5px, transparent 0.5px),
      radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.03) 0.5px, transparent 0.5px),
      radial-gradient(circle at 50% 10%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 15px 15px, 25px 25px, 35px 35px;
    animation: headerTextureShift 40s linear infinite;
    opacity: 0.6;
  }
  
  /* Header Shadow */
  .header-shadow {
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 10px;
    background: linear-gradient(180deg, 
      rgba(0, 0, 0, 0.3) 0%, 
      rgba(0, 0, 0, 0.1) 50%, 
      transparent 100%);
    z-index: 1;
  }
  
  .header-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, 
      rgba(255, 255, 255, 0.02) 0%, 
      rgba(255, 255, 255, 0.01) 50%, 
      transparent 100%);
    z-index: 2;
  }
  
  /* Gothic Border */
  .header-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 6px;
    z-index: 3;
    opacity: 0;
    animation: fadeInBorder 1s ease-out 0.5s forwards;
  }
  
  @keyframes fadeInBorder {
    to {
      opacity: 1;
    }
  }
  
  .border-line {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
  }
  
  .border-primary {
    bottom: 3px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.05) 10%,
      rgba(255, 255, 255, 0.2) 25%,
      rgba(255, 255, 255, 0.4) 40%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0.4) 60%,
      rgba(255, 255, 255, 0.2) 75%,
      rgba(255, 255, 255, 0.05) 90%,
      transparent 100%);
    filter: blur(0.3px);
    animation: borderGlow 8s ease-in-out infinite;
  }
  
  .border-secondary {
    bottom: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.03) 15%,
      rgba(255, 255, 255, 0.1) 35%,
      rgba(255, 255, 255, 0.25) 45%,
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0.25) 55%,
      rgba(255, 255, 255, 0.1) 65%,
      rgba(255, 255, 255, 0.03) 85%,
      transparent 100%);
    filter: blur(0.2px);
    animation: borderGlow 8s ease-in-out infinite 2s;
  }
  
  .border-ornament {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 6px;
  }
  
  .ornament-center {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 20%,
      rgba(255, 255, 255, 0.5) 40%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(255, 255, 255, 0.5) 60%,
      rgba(255, 255, 255, 0.2) 80%,
      transparent 100%);
    animation: ornamentPulse 6s ease-in-out infinite;
  }
  
  .ornament-left,
  .ornament-right {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 1px;
    background: linear-gradient(90deg,
      rgba(255, 255, 255, 0.4) 0%,
      rgba(255, 255, 255, 0.1) 100%);
  }
  
  .ornament-left {
    left: calc(50% - 40px);
    animation: ornamentPulse 6s ease-in-out infinite 1s;
  }
  
  .ornament-right {
    right: calc(50% - 40px);
    transform: translateY(-50%) scaleX(-1);
    animation: ornamentPulseRight 6s ease-in-out infinite 1s;
  }

  /* Main Header Styles */
  .site-header {
    position: relative;
    width: 100vw;
    left: 50%;
    transform: translateX(-50%);
    height: 70px;
    background-color: var(--color-background);
    box-shadow: 
      0 4px 20px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    z-index: 100;
  }
  
  .header-content {
    position: relative;
    height: 100%;
    width: 100%;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 3;
  }
  
  /* Logo Styles */
  .header-logo {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 4;
  }
  
  .logo-link,
  .logo-text {
    display: block;
    text-decoration: none;
    transition: all 0.3s ease;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }
  
  .logo-link:hover,
  .logo-text:hover {
    transform: scale(1.01);
    filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.4));
  }
  
  .logo-image {
    max-width: 160px;
    height: auto;
    display: block;
    filter: brightness(1.1) contrast(1.05);
  }
  
  .logo-text {
    font-family: 'Oswald', sans-serif;
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  /* Header Icons */
  .header-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-left: auto;
  }
  
  .header-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: none;
    border: none;
    color: var(--color-foreground);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 4px;
  }
  
  .header-icon:hover {
    background-color: rgba(255, 255, 255, 0.08);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  .header-icon svg {
    width: 18px;
    height: 18px;
    opacity: 0.9;
    transition: all 0.3s ease;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
  }
  
  .header-icon:hover svg {
    opacity: 1;
    transform: scale(1.1);
  }
  
  /* Cart Count Badge */
  .cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    min-width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    z-index: 5;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }
  
  /* Search Overlay */
  .search-overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    background-color: rgba(0, 0, 0, 0.8) !important;
    backdrop-filter: blur(10px) !important;
    z-index: 9999 !important;
    display: block !important;
  }
  
  .search-container {
    position: absolute !important;
    top: 50% !important;
    left: 50% !important;
    transform: translate(-50%, -50%) !important;
    width: 90% !important;
    max-width: 600px !important;
    z-index: 10000 !important;
  }
  
  .search-box {
    position: relative;
    background-color: var(--color-background-ui);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    padding: 0.75rem 1.5rem;
    backdrop-filter: blur(20px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  .search-form {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .search-input {
    flex: 1;
    background: none;
    border: none;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 1.125rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    outline: none;
  }
  
  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .search-submit {
    background: none;
    border: none;
    color: var(--color-foreground);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    opacity: 0.7;
  }
  
  .search-submit:hover {
    opacity: 1;
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  .search-close {
    position: absolute;
    right: -3rem;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: var(--color-foreground);
    cursor: pointer;
    padding: 0.75rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    opacity: 0.8;
    backdrop-filter: blur(10px);
  }
  
  .search-close:hover {
    opacity: 1;
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  /* Animations */
  @keyframes headerTextureShift {
    0% {
      background-position: 0px 0px, 0px 0px, 0px 0px;
    }
    100% {
      background-position: 15px 15px, -25px 25px, 35px -35px;
    }
  }
  
  @keyframes borderGlow {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }
  
  @keyframes ornamentPulse {
    0%, 100% {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
    50% {
      opacity: 0.7;
      transform: translate(-50%, -50%);
    }
  }
  
  @keyframes ornamentPulseRight {
    0%, 100% {
      opacity: 1;
      transform: translateY(-50%) scaleX(-1);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-50%) scaleX(-1);
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .site-header {
      height: 60px;
    }
    
    .header-content {
      padding: 0 1rem;
    }
    
    .header-icons {
      gap: 0.75rem;
    }
    
    .header-icon {
      width: 32px;
      height: 32px;
    }
    
    .logo-image {
      max-width: 120px;
    }
    
    .logo-text {
      font-size: 1.4rem;
    }
  }
  
  @media (max-width: 480px) {
    .site-header {
      height: 55px;
    }
    
    .header-content {
      padding: 0 1rem;
    }
    
    .header-icons {
      gap: 0.5rem;
    }
    
    .header-icon {
      width: 30px;
      height: 30px;
    }
    
    .header-icon svg {
      width: 18px;
      height: 18px;
    }
    
    .search-container {
      margin: 0 3rem;
    }
    
    .search-overlay {
      padding: 1rem;
    }
    
    .search-close {
      right: -2rem;
      padding: 0.5rem;
    }
    
    .logo-image {
      max-width: 100px;
    }
    
    .logo-text {
      font-size: 1.2rem;
    }
  }
{% endstylesheet %}

