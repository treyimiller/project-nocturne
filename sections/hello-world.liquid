    margin: 0 auto;
  }
  
  .products-grid {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    z-index: 2;
  }
  
  .product-card {
    position: relative;
    background-color: var(--color-background-ui);
    overflow: hidden;
    transition: all 0.4s ease;
    box-shadow: 
      0 8px 25px rgba(0, 0, 0, 0.3),
      0 4px 10px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(215, 38, 56, 0.02);
    border: 2px solid rgba(215, 38, 56, 0.05);
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, 
      rgba(215, 38, 56, 0.05) 0%,
      rgba(215, 38, 56, 0.02) 25%,
      rgba(215, 38, 56, 0.05) 50%,
      rgba(215, 38, 56, 0.02) 75%,
      rgba(215, 38, 56, 0.05) 100%);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .product-card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(100% + 20px);
    height: calc(100% + 20px);
    transform: translate(-50%, -50%);
    background: radial-gradient(ellipse at center, 
      rgba(0, 0, 0, 0.2) 0%, 
      rgba(0, 0, 0, 0.1) 40%, 
      transparent 70%);
    z-index: -2;
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.4),
      0 8px 20px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .product-card:hover::before {
    opacity: 1;
  }
  
  .product-card:hover::after {
    opacity: 1;
  }
  
  .product-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.5rem 1rem;
    border-radius: 20px;
  }
  
  .product-info {
    padding: 1.5rem;
    text-align: center;
  }
  
  .product-title {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-foreground);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  
  .product-price {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .current-price {
    font-family: 'Oswald', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-foreground);
  }
  
  .original-price {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-foreground);
    opacity: 0.5;
    text-decoration: line-through;
  }
  
  .product-cta {
    position: relative;
    display: inline-block;
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-decoration: none;
    transition: all 0.3s ease;
    opacity: 0.8;
    padding: 0.5rem 0;
  }
  
  .cta-text {
    position: relative;
    z-index: 1;
  }
  
  .cta-underline {
    position: absolute;
    bottom: 0.3rem;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      var(--color-foreground) 0%, 
      rgba(255, 255, 255, 0.6) 100%);
    transition: width 0.4s ease;
  }
  
  .product-cta:hover {
    opacity: 1;
  }
  
  .product-cta:hover .cta-underline {
    width: 100%;
  }
  
  .section-cta {
    text-align: center;
  }
  
  .cta-outline {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background-color: transparent;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .cta-outline:hover {
    border-color: rgba(255, 255, 255, 0.6);
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  /* Email Capture */
  .email-capture {
    position: relative;
    padding: 5rem 2rem;
    background: linear-gradient(135deg, 
      rgba(215, 38, 56, 0.03) 0%, 
      rgba(215, 38, 56, 0.01) 50%,
      rgba(215, 38, 56, 0.04) 100%);
    border-top: 1px solid rgba(215, 38, 56, 0.1);
    border-bottom: 1px solid rgba(215, 38, 56, 0.05);
  }
  
  .email-capture::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 20%, rgba(215, 38, 56, 0.04) 0%, transparent 60%),
      radial-gradient(circle at 80% 80%, rgba(215, 38, 56, 0.03) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 10%, rgba(215, 38, 56, 0.02) 0%, transparent 70%);
    pointer-events: none;
    z-index: 1;
    animation: sectionAtmosphere 110s ease-in-out infinite;
  }
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.015) 0%, transparent 50%);
    z-index: 1;
    pointer-events: none;
  }
  
  
  .email-capture-content {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    z-index: 2;
  }
  
  .email-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }
  
  .email-description {
    font-family: 'Oswald', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 2.5rem;
    margin-top: 0;
    line-height: 1.6;
  }
  
  .newsletter-form {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .form-group {
    display: flex;
    gap: 0;
    margin-bottom: 1rem;
    border-radius: 50px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .email-input {
    flex: 1;
    padding: 1rem 1.5rem;
    background-color: var(--color-background-ui);
    border: 2px solid rgba(215, 38, 56, 0.05);
    border-right: none;
    color: var(--color-foreground);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    outline: none;
    border-radius: 50px 0 0 50px;
  }
  
  .email-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .email-input:focus {
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .email-submit {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-family: 'Oswald', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    border-radius: 0 50px 50px 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .email-submit:hover {
    background-color: rgba(255, 255, 255, 0.9);
  }
  
  .email-disclaimer {
    font-family: 'Oswald', sans-serif;
    font-size: 0.75rem;
    font-weight: 300;
    color: var(--color-foreground);
    opacity: 0.5;
