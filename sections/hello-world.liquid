<!-- Hero Section -->
<section class="hero-section">
  {% if section.settings.hero_background_image %}
    <!-- Hero Background Image -->
    <div class="hero-background">
      <img 
        src="{{ section.settings.hero_background_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.hero_background_image.alt | default: 'Hero Background' }}"
        class="hero-bg-image"
        loading="eager"
      >
    </div>
  {% endif %}
  
  <!-- Background Elements -->
  <div class="hero-texture">
    <div class="hero-noise"></div>
    <div class="hero-gradient"></div>
  </div>
  
  <!-- Bottom Blend Overlay -->
  <div class="hero-blend-overlay"></div>
  
  <!-- Floating Particles -->
  <div class="hero-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>
  
  <!-- Hero Collection Name -->
  <div class="hero-collection-name">
    {% if section.settings.collection_name %}
      {{ section.settings.collection_name }}
    {% else %}
      Saints & Sinners
    {% endif %}
  </div>
  
  <!-- Hero CTA -->
  <div class="hero-cta-container">
    {% if section.settings.primary_cta_text %}
      <a href="{{ section.settings.primary_cta_url | default: '/collections/all' }}" class="hero-cta-button">
        {{ section.settings.primary_cta_text }}
      </a>
    {% endif %}
  </div>
</section>


<!-- Section Transition -->
<div class="section-transition"></div>

<!-- Featured Products Section -->
<section class="featured-products">
  <!-- Gothic Frame Top -->
  <div class="gothic-frame gothic-frame-top">
    <div class="frame-corner frame-corner-left">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
    <div class="frame-border frame-border-top">
      <div class="border-center-ornament">
        <div class="ornament-diamond"></div>
        <div class="ornament-lines">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <div class="frame-corner frame-corner-right">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
  </div>
  <div class="section-header">
    <h2 class="section-title">
      {% if section.settings.featured_title %}
        {{ section.settings.featured_title }}
      {% else %}
        Featured Collection
      {% endif %}
    </h2>
    {% if section.settings.featured_description %}
      <p class="section-description">{{ section.settings.featured_description }}</p>
    {% endif %}
  </div>
  
  <div class="products-grid">
    {% assign featured_collection = collections[section.settings.featured_collection] | default: collections.all %}
    {% for product in featured_collection.products limit: section.settings.products_count %}
      <div class="product-card">
        <div class="product-image">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 400 }}" 
              alt="{{ product.featured_image.alt | default: product.title }}"
              width="400"
              height="400"
              loading="lazy"
            >
          {% endif %}
          
          {% if product.compare_at_price > product.price %}
            <div class="product-badge">Sale</div>
          {% endif %}
        </div>
        
        <div class="product-info">
          <h3 class="product-title">{{ product.title }}</h3>
          <div class="product-price">
            <span class="current-price">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="original-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
          
          <a href="{{ product.url }}" class="product-cta">
            <span class="cta-text">View</span>
            <span class="cta-underline"></span>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
  
  {% if section.settings.view_all_url %}
    <div class="section-cta">
      <a href="{{ section.settings.view_all_url }}" class="cta-outline">
        View All Products
      </a>
    </div>
  {% endif %}
  
  <!-- Gothic Frame Bottom -->
  <div class="gothic-frame gothic-frame-bottom">
    <div class="frame-corner frame-corner-left">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
    <div class="frame-border frame-border-bottom">
      <div class="border-center-ornament">
        <div class="ornament-diamond"></div>
        <div class="ornament-lines">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <div class="frame-corner frame-corner-right">
      <div class="corner-ornament"></div>
      <div class="corner-lines"></div>
    </div>
  </div>
</section>

