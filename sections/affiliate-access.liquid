<!-- Affiliate Access Page Section -->
{% if section.settings.display_mode == 'full_page' %}
  <!-- Full Page Content Display -->
  <div class="affiliate-full-page">
    <!-- Page Content -->
    {% if page.content != blank %}
      <div class="page-content">
        {{ page.content }}
      </div>
    {% endif %}
    
    <!-- Affiliate Exclusive Content -->
    <div class="exclusive-content-section">
      <div class="affiliate-content">
        <h2>Affiliate Resource Center</h2>
        <p>Welcome to your exclusive affiliate portal. Access marketing materials, track commissions, and manage your partnership with us.</p>
        
        <div class="member-benefits">
          <div class="benefit-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="1" x2="12" y2="23"/>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
            <span>Competitive commission structure</span>
          </div>
          <div class="benefit-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
            </svg>
            <span>Marketing materials & assets</span>
          </div>
