  {%- include 'locksmith' -%}
{%- comment %}</locksmith:faef>{% endcomment -%}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {{ locksmith_initializations }}
    {% # Google Fonts %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=EB+Garamond:wght@400;500;600;700&display=swap" rel="stylesheet">

    {% # Disable browser loading indicators %}
    <meta name="theme-color" content="#0E0E10">
    <meta name="msapplication-navbutton-color" content="#0E0E10">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
    
    <!-- Override Locksmith spinner -->
    <style>
      #locksmith-spinner-wrapper {
        display: none !important;
        visibility: hidden !important;
        opacity: 0 !important;
        z-index: -1 !important;
      }
      
      /* Ensure our preloader has highest priority */
      .preloader {
        z-index: 9999999 !important;
      }
      
      /* Hide any other potential loaders */
      .shopify-loader,
      .loading-spinner,
      .loader,
      .spinner,
      [class*="loading"],
      [class*="spinner"] {
        display: none !important;
        visibility: hidden !important;
      }
      
      /* Hide content during preloader - use body class for easier override */
      body.preloader-active .site-footer,
      body.preloader-active footer,
      body.preloader-active [class*="footer"],
      body.preloader-active header,
      body.preloader-active .header,
      body.preloader-active [class*="header"],
      body.preloader-active .home-content,
      body.preloader-active .main-content,
      body.preloader-active main {
        display: none !important;
        visibility: hidden !important;
        opacity: 0 !important;
      }
      
      /* Prevent body from showing loading states */
      body {
        visibility: visible !important;
      }
    </style>
    
    <!-- Early JavaScript to hide any loading states -->
    <script>
      // Hide any existing loading elements immediately
      document.addEventListener('DOMContentLoaded', function() {
        const loadingElements = document.querySelectorAll('#locksmith-spinner-wrapper, .shopify-loader, .loading-spinner, .loader, .spinner, [class*="loading"], [class*="spinner"]');
        loadingElements.forEach(element => {
          if (element && element.id !== 'preloader' && element.id !== 'mobile-preloader') {
            element.style.display = 'none';
            element.style.visibility = 'hidden';
            element.style.opacity = '0';
          }
        });
      });
      
      // Hide loading elements and content as soon as possible
      const hideLoaders = function() {
        const locksmithSpinner = document.getElementById('locksmith-spinner-wrapper');
        if (locksmithSpinner) {
          locksmithSpinner.style.display = 'none';
          locksmithSpinner.style.visibility = 'hidden';
          locksmithSpinner.style.opacity = '0';
        }
        
        // Ensure body has preloader-active class
        document.body.classList.add('preloader-active');
      };
      
      // Run immediately
      hideLoaders();
      
      // Run when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', hideLoaders);
      } else {
        hideLoaders();
      }
      
      // Absolute fallback - show content after 2 seconds no matter what
      setTimeout(function() {
        document.body.classList.remove('preloader-active');
        document.body.style.visibility = 'visible';
      }, 2000);
    </script>
  </head>

  <body class="preloader-active">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    
    {% section 'cart-drawer' %}
  </body>
</html>